---
// src/components/UltimasPublicaciones.astro
import RevistaCardPost from '../../components/pages/index/RevistaCardPost.astro';
import { revistas } from '../../components/pages/index/revistas';
---

<section class="py-16 md:py-24 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-green-600 to-green-800">
          Últimas Publicaciones
        </span>
      </h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
        Descubre nuestras revistas digitales que destacan el talento y emprendimiento boliviano
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
      {revistas.map((revista, index) => (
        <RevistaCardPost 
          titulo={revista.titulo}
          descripcion={revista.resumen}
          imagen={revista.imagen}
          enlace={revista.enlace}
          fecha={revista.fecha || ""}
          key={`revista-${index}`}
        />
      ))}
    </div>

    <div class="text-center mt-16">
      <a 
        href="/revista-digital" 
        class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-base font-medium rounded-md text-white bg-green-600 hover:bg-green-700 transition-colors duration-300 shadow-md hover:shadow-lg"
        aria-label="Ver todas las publicaciones de la revista digital"
      >
        Ver más publicaciones
        <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>
