---
// Hero.astro (componente mejorado)
---

<section class="bg-white min-h-[85vh] w-full px-4 sm:px-6 lg:px-8 flex items-center relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-white to-blue-50 opacity-90 z-0"></div>
  
  <div class="container mx-auto relative z-10">
    <div class="grid items-center gap-12 lg:grid-cols-12">
      
      <!-- Texto -->
      <div class="lg:col-span-7 text-center lg:text-left">
        <h1 class="mb-6 text-4xl sm:text-5xl md:text-6xl font-extrabold leading-tight text-gray-900">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-blue-800">
            Fundación Hecho en Bolivia
          </span>
        </h1>

        <p class="mb-8 text-lg md:text-xl text-gray-700 max-w-xl mx-auto lg:mx-0">
          Impulsamos el <span class="font-semibold text-blue-600">talento</span>, la <span class="font-semibold text-blue-600">innovación</span> y el <span class="font-semibold text-blue-600">emprendimiento</span> boliviano con pasión y compromiso social.
        </p>

        <!-- Estadísticas/Métricas -->
        <div class="flex flex-wrap gap-6 mb-8 justify-center lg:justify-start">
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600">+200</div>
            <div class="text-sm text-gray-600">Emprendedores</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600">15</div>
            <div class="text-sm text-gray-600">Proyectos</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600">5</div>
            <div class="text-sm text-gray-600">Departamentos</div>
          </div>
        </div>

        <!-- Botones -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href="#nosotros" class="inline-flex items-center justify-center px-6 py-3.5 text-base font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 transition-all hover:-translate-y-1 shadow-lg hover:shadow-blue-200">
            Conoce más
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
          <a href="#contacto" class="inline-flex items-center justify-center px-6 py-3.5 text-base font-medium text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-4 focus:outline-none focus:ring-gray-200 transition-all hover:-translate-y-1 shadow-lg">
            Contacto
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Imagen -->
      <div class="lg:col-span-5 flex justify-center mt-10 lg:mt-0">
        <div class="relative">
          <img 
            src="/logo-hero.png" 
            alt="Logotipo de la Fundación Hecho en Bolivia representando la cultura y emprendimiento boliviano" 
            width="500"
            height="500"
            class="w-full max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg rounded-xl shadow-xl transition-transform duration-300 hover:scale-105"
            loading="eager"
          />
          <div class="absolute -inset-4 bg-blue-100 rounded-2xl -z-10 blur-md opacity-70"></div>
        </div>
      </div>
      
    </div>
  </div>
</section>
