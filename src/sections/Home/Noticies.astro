<script>
document.addEventListener('DOMContentLoaded', function() {
  const tabs = {
    nacionales: {
      tab: document.getElementById('tab-nacionales'),
      content: document.getElementById('contenido-nacionales')
    },
    internacionales: {
      tab: document.getElementById('tab-internacionales'),
      content: document.getElementById('contenido-internacionales')
    }
  };

  // Función para cambiar de pestaña
  function switchTab(activeTab) {
    // Actualizar todos los tabs y contenidos
    Object.entries(tabs).forEach(([key, {tab, content}]) => {
      if (key === activeTab) {
        // Activar tab seleccionado
        tab.classList.add('bg-white', 'shadow-sm', 'text-title');
        tab.classList.remove('text-jumbo', 'hover:text-secondary');
        tab.setAttribute('aria-selected', 'true');
        content.classList.remove('hidden');
      } else {
        // Desactivar otros tabs
        tab.classList.remove('bg-white', 'shadow-sm', 'text-title');
        tab.classList.add('text-jumbo', 'hover:text-secondary');
        tab.setAttribute('aria-selected', 'false');
        content.classList.add('hidden');
      }
    });
  }

  // Event listeners para los tabs
  tabs.nacionales.tab.addEventListener('click', () => switchTab('nacionales'));
  tabs.internacionales.tab.addEventListener('click', () => switchTab('internacionales'));

  // Activar pestaña nacional por defecto
  switchTab('nacionales');
});
</script>
