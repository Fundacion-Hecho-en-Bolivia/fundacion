  <!-- JavaScript -->
<script>
  const tabNacionales = document.getElementById('tab-nacionales');
  const tabInternacionales = document.getElementById('tab-internacionales');
  const contenidoNacionales = document.getElementById('contenido-nacionales');
  const contenidoInternacionales = document.getElementById('contenido-internacionales');

  // Función para manejar el cambio de tabs
  function switchTab(activeTab, inactiveTab, activeContent, inactiveContent) {
    // Ocultar contenido inactivo y mostrar contenido activo
    inactiveContent.classList.add('hidden');
    activeContent.classList.remove('hidden');

    // Eliminar clases activas de ambos tabs
    inactiveTab.classList.remove('text-indigo-600', 'border-indigo-600', 'text-emerald-600', 'border-emerald-600');
    activeTab.classList.add('text-indigo-600', 'border-indigo-600');

    // Añadir clases activas al tab seleccionado
    if (activeTab === tabNacionales) {
      tabInternacionales.classList.add('text-gray-600');
    } else {
      tabNacionales.classList.add('text-gray-600');
    }
  }

  // Evento click para el tab de Noticias Nacionales
  tabNacionales.addEventListener('click', () => {
    switchTab(tabNacionales, tabInternacionales, contenidoNacionales, contenidoInternacionales);
  });

  // Evento click para el tab de Noticias Internacionales
  tabInternacionales.addEventListener('click', () => {
    switchTab(tabInternacionales, tabNacionales, contenidoInternacionales, contenidoNacionales);
  });
</script>
