<script>
  // Slider Nacionales
  const carouselNacionales = document.getElementById("alianzasCarouselNacionales");
  const slideGroup = 3; // Múltiplos de 3 para mantener el efecto
  const itemWidthNacionales = carouselNacionales.offsetWidth / slideGroup;
  const totalItemsNacionales = carouselNacionales.children.length;
  let currentIndexNacionales = 0;

  function moveCarouselNacionales() {
    const maxIndexNacionales = Math.floor(totalItemsNacionales / slideGroup) - 1;
    currentIndexNacionales = currentIndexNacionales >= maxIndexNacionales ? 0 : currentIndexNacionales + 1;
    const offsetNacionales = -(itemWidthNacionales * slideGroup * currentIndexNacionales);
    carouselNacionales.style.transform = `translateX(${offsetNacionales}px)`;
  }

  setInterval(moveCarouselNacionales, 3000); // Deslizar cada 3 segundos

  // Slider Internacionales
  const carouselInternacionales = document.getElementById("alianzasCarouselInternacionales");
  const itemWidthInternacionales = carouselInternacionales.offsetWidth / 3; // Aquí trabajamos con 3 para un efecto proporcional
  const totalItemsInternacionales = carouselInternacionales.children.length;
  let currentIndexInternacionales = 0;

  function moveCarouselInternacionales() {
    const maxIndexInternacionales = Math.floor(totalItemsInternacionales / 3) - 1;
    currentIndexInternacionales = currentIndexInternacionales >= maxIndexInternacionales ? 0 : currentIndexInternacionales + 1;
    const offsetInternacionales = -(itemWidthInternacionales * 3 * currentIndexInternacionales);
    carouselInternacionales.style.transform = `translateX(${offsetInternacionales}px)`;
  }

  setInterval(moveCarouselInternacionales, 3000); // Deslizar cada 3 segundos
</script>
