---
// src/components/RadialCard.astro
const { titulo, imagen, audio } = Astro.props;
---

<div class="rounded-lg bg-white p-4 text-center shadow">
  <img
    src={imagen}
    alt={titulo}
    class="mx-auto mb-4 h-24 w-24 rounded-full object-cover shadow-md"
  />
  <h3 class="mb-2 text-sm font-semibold">{titulo}</h3>
  <audio controls class="w-full">
    <source src={audio} type="audio/mpeg" />
    Tu navegador no soporta el elemento de audio.
  </audio>
</div>
