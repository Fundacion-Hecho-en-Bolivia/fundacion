<script>
  const carousel = document.getElementById("alianzasCarousel");
  const slideGroup = 3;
  const itemWidth = carousel.offsetWidth / slideGroup;
  const totalItems = carousel.children.length;
  let currentIndex = 0;

  function moveCarousel() {
    const maxIndex = Math.floor(totalItems / slideGroup) - 1;
    currentIndex = currentIndex >= maxIndex ? 0 : currentIndex + 1;
    const offset = -(itemWidth * slideGroup * currentIndex);
    carousel.style.transform = `translateX(${offset}px)`;
  }

  setInterval(moveCarousel, 3000); // Cada 3 segundos
</script>


<script>
  const carousel = document.getElementById("logoCarousel");
  const slideWidth = 128; // Width of one item in pixels (w-32 = 128px)
  let currentPosition = 0;

  function moveCarousel() {
    const totalWidth = carousel.scrollWidth;
    currentPosition -= slideWidth;

    if (Math.abs(currentPosition) >= totalWidth / 2) {
      currentPosition = 0;
    }

    carousel.style.transform = `translateX(${currentPosition}px)`;
  }

  setInterval(moveCarousel, 2000); // Change slide every 2 seconds
</script>


