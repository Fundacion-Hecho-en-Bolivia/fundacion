---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<!doctype html>
<html lang="es" data-theme="light" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://fundacionhechos.org" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Metatags -->
    <title>Fundación Hechos en Bolivia - Ayuda y Desarrollo Social</title>
    <meta name="description" content="Fundación Hechos en Bolivia, una organización sin fines de lucro dedicada a la ayuda social y desarrollo comunitario en Bolivia." />
    <!-- Keywords no muy relevantes hoy, pero si quieres mantenerlos -->
    <meta name="keywords" content="Fundación, Hechos, Bolivia, ayuda social, desarrollo comunitario, sin fines de lucro, charity" />
    <meta name="author" content="Fundación Hechos en Bolivia" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="color-scheme" content="light dark" />

    <!-- Open Graph -->
    <meta property="og:site_name" content="Fundación Hechos en Bolivia" />
    <meta property="og:locale" content="es_BO" />
    <meta property="og:title" content="Fundación Hechos en Bolivia - Ayuda y Desarrollo Social" />
    <meta property="og:description" content="Fundación Hechos en Bolivia, una organización sin fines de lucro dedicada a la ayuda social y desarrollo comunitario en Bolivia." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://fundacionhechos.org" />
    <meta property="og:image" content="https://fundacionhechos.org/images/og-image.png" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Fundación Hechos en Bolivia - Ayuda y Desarrollo Social" />
    <meta name="twitter:description" content="Fundación Hechos en Bolivia, una organización sin fines de lucro dedicada a la ayuda social y desarrollo comunitario en Bolivia." />
    <meta name="twitter:image" content="https://fundacionhechos.org/images/og-image.png" />

    <!-- Structured Data JSON-LD para Organización -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Fundación Hechos en Bolivia",
        "url": "https://fundacionhechoebnbolivia.com",
        "logo": "https://fundacionhechos.org/images/logo.png",
        "sameAs": [
          "https://facebook.com/fundacionhechoenbolivia",
          "https://twitter.com/fundacionhechoenbolivia",
          "https://instagram.com/fundacionhechoenbolivia",
        ]
      }
    </script>
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>

